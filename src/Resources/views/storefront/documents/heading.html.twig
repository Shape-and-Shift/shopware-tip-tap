{% block sas_tiptap_heading %}
    {% set attrs = document.attrs %}
    {% set headingTag = attrs.level ? 'h' ~ attrs.level : 'h1' %}

    {% for doc in document.content %}
        {% sw_include '@Storefront/storefront/documents/text.html.twig' with {
            document: doc,
            tag: headingTag,
            textAlign: attrs.textAlign,
        } %}
    {% endfor %}
{% endblock %}